{
  "name": "CensorWatch",
  "description" : "Get alerts when your Weibos are being censored. ",
  "version": "1.0",
  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["*://*.weibo.com/*"],
    "css": [],
    "js": ["content-script.js"]
  }],
  "permissions": ["webRequest", "*://*.weibo.com/*"],
  "manifest_version": 2
}
